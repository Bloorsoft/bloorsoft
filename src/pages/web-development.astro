---
import Container from "@components/container.astro";
import Layout from "@layouts/Layout.astro";
import Sectionhead from "@components/sectionhead.astro";
import Offers from "@components/offers.astro";
import Faq from "@components/faq.astro";
import Cta from "@components/cta.astro";
import Features from "@components/features.astro";
import Testimonials from "@components/testimonials.astro";
import { Icon } from "astro-icon/components";
import { Picture } from "astro:assets";
import EmployeeImg from "../assets/features/web-techs.png";

const WHAT_WE_OFFER = [
  "Rapid Prototyping for Quick Market Testing",
  "Scalable Architectures to Grow with Your User Base",
  "MVP Development to Validate Your Business Idea",
  "Streamlined Workflows to Maximize Lean Resources",
  "Integration with Essential Startup Tools and APIs",
];

const OUR_PROCESS = [
  {
    title: "Lean Planning for Cost-Efficiency",
    description:
      "In this initial phase, we focus on understanding your business goals, target audience, and the unique value proposition of your startup. We establish the project's scope with a keen eye on cost efficiency, ensuring every feature we plan is essential and provides real value.",
    icon: "fluent:box-multiple-24-regular",
  },
  {
    title: "Iterative Development for Continuous Improvement",
    description:
      "Our development process is agile, allowing for incremental improvements with regular review cycles. This approach means you get to see tangible progress, provide feedback, and we refine the product in real-time, ensuring it evolves with your needs and user feedback.",
    icon: "fluent:box-multiple-24-regular",
  },
  {
    title: "Feedback Loops with Stakeholders for Product-Market Fit",
    description:
      "We prioritize communication with all stakeholders, facilitating feedback loops that are vital for aligning the product with market demands. Engaging in active listening, we fine-tune functionalities to ensure the end product resonates with your target users and market fit.",
    icon: "fluent:box-multiple-24-regular",
  },
  {
    title: "Deployment Strategies for Fast Go-to-Market",
    description:
      "Deploying your web application swiftly and securely is crucial. We implement CI/CD pipelines for automated testing and deployment, which accelerates the go-to-market process. Our deployment strategies are designed for startups looking to make an impact quickly and reliably.",
    icon: "fluent:box-multiple-24-regular",
  },
  {
    title: " Post-Launch Support and Scaling",
    description:
      "After launch, our commitment continues with performance monitoring, technical support, and scalable updates to meet your growing startupâ€™s needs and user feedback, ensuring seamless evolution of your platform.",
    icon: "fluent:box-multiple-24-regular",
  },
];
---

<Layout title="Full Stack Web Development" footerMargin={false}>
  <Container>
    <Sectionhead>
      <Fragment slot="badge">Our Web Dev + Your Startup = ðŸš€</Fragment>
      <Fragment slot="title">
        Agile Web Development for Dynamic <span class="text-indigo-600"
          >Startups</span
        >
      </Fragment>
      <Fragment slot="desc">
        Fast-paced, adaptable, scalable â€“ web solutions designed for the
        ever-evolving needs of startups.
      </Fragment>
    </Sectionhead>

    <Offers
      offers={WHAT_WE_OFFER}
      subtitle="Our full stack web development services are uniquely tailored to the needs of your startups"
    />
  </Container>

  <!-- Use features for the offers sections -->
  <Container>
    <Features
      title="Our Process"
      badge="How We Do It"
      desc="An approach thatâ€™s tailored to startups â€“ lean, iterative, and feedback-oriented."
      features={OUR_PROCESS}
    />
  </Container>

  <!-- <Container>
    <Sectionhead>
      <Fragment slot="badge">Stack Agnostic Full Stack Devs</Fragment>
      <Fragment slot="title">Technologies That We Use</Fragment>
      <Fragment slot="desc">
        Fast-paced, adaptable, scalable â€“ web solutions designed for the
        ever-evolving needs of startups.
      </Fragment>
    </Sectionhead>
  </Container> -->

  <div class="grid sm:grid-cols-2 gap-10 mx-auto mt-36">
    <div class="relative">
      <div
        class="absolute hidden md:block w-96 h-96 bg-purple-100 rounded-full right-0 top-1/3 -z-10">
      </div>
      <div
        class="absolute hidden md:block w-44 h-44 bg-purple-100 rounded-full left-10 top-1/4 -z-10">
      </div>
      <div
        class="absolute w-96 h-96 blur-2xl -z-10 bg-gradient-radial from-indigo-200 left-0 top-0">
      </div>
      <div
        class="absolute w-48 h-48 lg:w-96 lg:h-96 blur-2xl -z-10 bg-gradient-radial from-purple-200 left-36 top-10">
      </div>
      <Picture
        formats={["avif", "webp"]}
        src={EmployeeImg}
        alt="Happy Team"
        class="rounded-xl w-full max-w-md mx-auto shadow-2xl"
        loading="lazy"
      />
    </div>
    <div class="place-self-center p-6">
      <h2 class="text-5xl text-gray-800 tracking-tight -mt-2">
        <span class="text-indigo-600 font-bold">Web</span>
        <strong>Technologies that We Use</strong>
      </h2>
      <p class="text-lg max-w-xl mt-4 leading-relaxed text-slate-500">
        We are tech-agnostic engineers, selecting the optimal stack to meet each
        projectâ€™s unique challenges with agility and expertise. Our core
        proficiencies include:
      </p>
      <ul class="grid mt-6 text-left gap-y-4">
        <li class="flex items-center gap-3 text-slate-800">
          <Icon name="ph:check-circle-fill" class="w-5 h-5" />

          <span class="text-slate-600"
            ><span class="font-bold">React & TypeScript/JavaScript:</span> For responsive,
            efficient front-ends and robust, scalable back-ends.</span
          >
        </li>

        <li class="flex items-center gap-3 text-slate-800">
          <Icon name="ph:check-circle-fill" class="w-5 h-5" />

          <span class="text-slate-600"
            ><span class="font-bold">Tailwind CSS & AWS:</span> Ensuring aesthetic
            consistency and reliable, scalable cloud infrastructure.
          </span>
        </li>

        <li class="flex items-center gap-3 text-slate-800">
          <Icon name="ph:check-circle-fill" class="w-5 h-5" />

          <span class="text-slate-600"
            ><span class="font-bold">Modern DevOps Tools:</span> From Docker to CI/CD,
            we employ the latest in DevOps for seamless deployment and operations.
          </span>
        </li>
      </ul>
    </div>
  </div>

  <!-- next section is: Why you should choose us for your startups -->
  <Container>
    <div class="mt-48">
      <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight">
        Why you should choose us for your <span class="text-indigo-600"
          >startup</span
        >
      </h2>
      <p class="text-lg mt-4 text-slate-600">
        Behind every project is a startup's ambition turned into action. See the
        real-world impact of our tailored tech solutions.
      </p>
    </div>
  </Container>
  <Testimonials showHeadings={false} />

  <Faq />
  <Cta />
</Layout>
