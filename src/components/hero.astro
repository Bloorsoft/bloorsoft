---
import { Image } from "astro:assets";
import heroImage from "@assets/hero-axp.svg";
import Link from "@components/ui/link.astro";
import Container from "@components/container.astro";
---

<div class="overflow-x-clip">
  <Container>
    <main class="grid lg:grid-cols-4 place-items-center relative pt-8 pb-8 lg:pt-40 lg:pb-40">
      <div
        class="absolute w-96 h-96 blur-2xl -z-10 bg-gradient-radial from-indigo-200 right-0 top-20">
      </div>
      <div
        class="absolute w-96 h-96 blur-2xl -z-10 bg-gradient-radial from-purple-200 right-56 top-30">
      </div>

      <div class="max-w-sm md:max-w-max lg:col-span-2">
        <h1
          class="text-2xl lg:text-3xl xl:text-5xl font-bold lg:tracking-tight xl:tracking-tighter [text-wrap:balance] text-center lg:text-start">
          <span
            >Empowering <span class="text-indigo-600">Startups</span> with AI Driven
            Web and Mobile Development.
          </span>
          <span class="block">From Toronto to SF.</span>
        </h1>
        <p
          class="text-lg mt-4 text-slate-600 [text-wrap:balance] text-center lg:text-start">
          Startups are hard. Let us help transform your ideas into impactful
          products with our tailored development services.
        </p>
        <div
          class="mt-6 flex flex-col sm:flex-row sm:justify-center lg:justify-start gap-3">
          <Link
            href="/contact"
            target="_blank"
            class="flex gap-1 items-center justify-center"
            rel="noopener">
            Schedule a free call
          </Link>
          <!-- TODO: Can we put something else here instead of the free version? -->
          <!-- <Link
            size="lg"
            style="outline"
            rel="noopener"
            href="https://github.com/surjithctly/astroship"
            class="flex gap-1 items-center justify-center"
            target="_blank">
            Free Version
          </Link> -->
        </div>
      </div>
      <div class="py-3 lg:col-span-2 w-full h-full flex justify-center items-center">
        <Image
          src={heroImage}
          alt="Astronaut in the air"
          loading="eager"
          fetchpriority="high"
          class="scale-105 w-full h-full max-w-md max-h-md lg:max-w-xl lg:max-h-xl"
        />
        <!-- <script
          type="module"
          src="https://unpkg.com/@splinetool/viewer@1.0.58/build/spline-viewer.js"
        ></script>
        <spline-viewer
          url="https://prod.spline.design/Mg6H2jgGvKTvyjWp/scene.splinecode"
        ></spline-viewer> -->
      </div>
    </main>
  </Container>
</div>
