---
import { Image } from "astro:assets";
import heroImage from "@assets/hero-screenshot.png";
import Link from "@components/ui/link.astro";
import Container from "@components/container.astro";
---

<div class="overflow-x-clip">
  <Container>
    <main class="grid lg:grid-cols-5 place-items-center relative">
      <div
        class="absolute w-96 h-96 blur-2xl -z-10 bg-gradient-radial from-indigo-200 right-0 top-0">
      </div>
      <div
        class="absolute w-96 h-96 blur-2xl -z-10 bg-gradient-radial from-purple-200 right-56 top-10">
      </div>

      <div class="max-w-sm md:max-w-max lg:col-span-2">
        <h1
          class="text-2xl lg:text-3xl xl:text-5xl font-bold lg:tracking-tight xl:tracking-tighter [text-wrap:balance] text-center lg:text-start">
          <span>Empowering <span class="text-indigo-600">startups</span> with AI infused Web and Mobile development. </span>
          <span class="block">From Toronto to SF.</span>
        </h1>
        <p
          class="text-lg mt-4 max-w-lg text-slate-600 [text-wrap:balance] text-center lg:text-start">
          Startups are hard. Let us help transform your ideas into impactful products with our tailored development services.
        </p>
        <div
          class="mt-6 flex flex-col sm:flex-row sm:justify-center lg:justify-start gap-3">
          <Link
            href="/contact"
            target="_blank"
            class="flex gap-1 items-center justify-center"
            rel="noopener">
            Schedule a free call
          </Link>
          <!-- TODO: Can we put something else here instead of the free version? -->
          <!-- <Link
            size="lg"
            style="outline"
            rel="noopener"
            href="https://github.com/surjithctly/astroship"
            class="flex gap-1 items-center justify-center"
            target="_blank">
            Free Version
          </Link> -->
        </div>
      </div>
      <div class="py-3 lg:col-span-3 lg:-mr-44">
        <Image
          src={heroImage}
          alt="Astronaut in the air"
          loading="eager"
          fetchpriority="high"
        />
      </div>
    </main>
  </Container>
</div>
