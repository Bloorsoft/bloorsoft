{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "strictNullChecks": true,
    "baseUrl": "./src",
    "paths": {
      "@lib/*": [
        "lib/*"
      ],
      "@utils/*": [
        "utils/*"
      ],
      "@components/*": [
        "components/*"
      ],
      "@layouts/*": [
        "layouts/*"
      ],
      "@assets/*": [
        "assets/*"
      ],
      "@pages/*": [
        "pages/*"
      ],
      "@scripts/*": [
        "scripts/*"
      ],
      "@draft_pages/*": [
        "draft_pages/*"
      ],
    },
  },
  "plugins": [
    {
      "name": "@astrojs/ts-plugin"
    }
  ],
  "include": [
    "src/**/*",
    "src/declarations.d.ts"
  ]
}